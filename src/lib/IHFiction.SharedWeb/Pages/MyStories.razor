@using Microsoft.AspNetCore.Components.Web.Virtualization
@using Microsoft.AspNetCore.Authorization

@page "/my-stories"

@attribute [Authorize(Roles = "author")]
@inject StoryService StoryService
@inject NavigationManager Navigation

<h1>My Stories</h1>

<div class="block">
    <button class="button is-primary" @onclick="CreateNewStory">Create New Story</button>
</div>

@if (_isLoading)
{
    <div class="section">
        <div class="container has-text-centered">
            <span class="icon is-large">
                <i class="fas fa-spinner fa-pulse fa-2x"></i>
            </span>
            <p>Loading stories...</p>
        </div>
    </div>
}
else if (!string.IsNullOrEmpty(_errorMessage))
{
    <div class="section">
        <div class="container">
            <div class="notification is-danger">
                <strong>Error:</strong> @_errorMessage
            </div>
        </div>
    </div>
}
else if (_stories != null)
{
    <Virtualize Items="_stories" Context="story">
        <div class="box">
            <div class="columns is-vcentered">
                <div class="column">
                    <p class="title is-5">@story.Title</p>
                    <p class="subtitle is-6">@(story.IsPublished ? "Published" : "Draft")</p>
                </div>
                <div class="column is-narrow">
                    <div class="dropdown is-hoverable is-right">
                        <div class="dropdown-trigger">
                            <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
                                <span>Actions</span>
                                <span class="icon is-small">
                                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                                </span>
                            </button>
                        </div>
                        <div class="dropdown-menu" id="dropdown-menu" role="menu">
                            <div class="dropdown-content">
                                <a @onclick="e => EditStory(story.Id)" class="dropdown-item">Edit</a>
                                @if (story.IsPublished)
                                {
                                    <a @onclick="e => UnpublishStory(story.Id)" class="dropdown-item">Unpublish</a>
                                }
                                else
                                {
                                    <a @onclick="e => ShowPublishDialog(story)" class="dropdown-item">Publish</a>
                                }
                                <hr class="dropdown-divider">
                                <a @onclick="e => DeleteStory(story.Id)" class="dropdown-item is-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Virtualize>
}
@if (_showPublishDialog && _selectedStory != null)
{
    <div class="modal is-active">
        <div class="modal-background" @onclick="CancelPublish"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Publish Story</p>
                <button class="delete" aria-label="close" @onclick="CancelPublish"></button>
            </header>
            <section class="modal-card-body">
                <p>Do you want to publish <strong>@_selectedStory.Title</strong>?</p>
                @if (_selectedStory.HasBooks || _selectedStory.HasChapters)
                {
                    <div class="notification is-warning">
                        This story has child content:
                        <ul>
                            @if (_selectedStory.HasBooks)
                            {
                                <li>Contains books</li>
                            }
                            @if (_selectedStory.HasChapters)
                            {
                                <li>Contains chapters</li>
                            }
                        </ul>
                        <label class="checkbox">
                            <input type="checkbox" @bind="_publishAll" />
                            Publish all child content (books/chapters)
                        </label>
                    </div>
                }
            </section>
            <footer class="modal-card-foot">
                <button class="button is-success" @onclick="ConfirmPublish">Publish</button>
                <button class="button" @onclick="CancelPublish">Cancel</button>
            </footer>
        </div>
    </div>
}

@code {
    private ICollection<LinkedOfAuthorStoryItem>? _stories;
    private bool _isLoading = true;
    private string? _errorMessage;

    // Modal state
    private bool _showPublishDialog = false;
    private LinkedOfAuthorStoryItem? _selectedStory;
    private bool _publishAll = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadStories();
    }

    private void CreateNewStory()
    {
        Navigation.NavigateTo("/stories/new");
    }

    private void EditStory(string storyId)
    {
        Navigation.NavigateTo($"/stories/{storyId}/edit");
    }

    private void ShowPublishDialog(LinkedOfAuthorStoryItem story)
    {
        _selectedStory = story;
        _publishAll = false;
        _showPublishDialog = true;
    }

    private async Task ConfirmPublish()
    {
        if (_selectedStory == null) return;
        _isLoading = true;
        _errorMessage = null;
        var result = await StoryService.PublishWorkAsync(_selectedStory.Id, _publishAll);
        _showPublishDialog = false;
        _selectedStory = null;
        if (result.IsSuccess)
        {
            await LoadStories();
        }
        else
        {
            _errorMessage = result.DomainError.Description;
        }
        _isLoading = false;
    }

    private void CancelPublish()
    {
        _showPublishDialog = false;
        _selectedStory = null;
    }

    private async Task UnpublishStory(string storyId)
    {
        _isLoading = true;
        _errorMessage = null;
        var result = await StoryService.UnpublishStoryAsync(storyId);
        if (result.IsSuccess)
        {
            await LoadStories();
        }
        else
        {
            _errorMessage = result.DomainError.Description;
        }
        _isLoading = false;
    }

    private async Task DeleteStory(string storyId)
    {
        _isLoading = true;
        _errorMessage = null;
        var result = await StoryService.DeleteStoryAsync(storyId);
        if (result.IsSuccess)
        {
            await LoadStories();
        }
        else
        {
            _errorMessage = result.DomainError.Description;
        }
        _isLoading = false;
    }

    private async Task LoadStories()
    {
        _isLoading = true;
        _errorMessage = null;
        var result = await StoryService.GetCurrentAuthorStoriesAsync(new GetCurrentAuthorStoriesBody());
        if (result.IsSuccess)
        {
            _stories = result.Value.Data;
        }
        else
        {
            _errorMessage = result.DomainError.Description;
        }
        _isLoading = false;
        StateHasChanged();
    }
}